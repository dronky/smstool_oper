/* REXX */
ARG TEMPDS ADDR VOL
IF SYSDSN("'"TEMPDS"'")='OK' THEN
  ADDRESS TSO "DELETE '"TEMPDS"'"
"ALLOC DA('"TEMPDS"') F(OUTDD) NEW "
QUEUE "//A09REFOR JOB A09,MAKARENKO,NOTIFY=&SYSUID,MSGCLASS=X"
QUEUE "//STEP1    EXEC PGM=ICKDSF,PARM='NOREPLYU'"
QUEUE "//SYSPRINT DD SYSOUT=*"
QUEUE "  REFORMAT UNITADDRESS("ADDR") VOLID(TM"ADDR") VERIFY("VOL") "
QUEUE "//*"
QUEUE "$$"
"SUBMIT * END($$)"
"EXECIO * DISKW OUTDD (FINIS"
ADDRESS SYSCALL 'SLEEP 1'
"FREE F(OUTDD)"
